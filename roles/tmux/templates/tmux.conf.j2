# {{ ansible_managed }}
#
# DO NOT EDIT THIS FILE DIRECTLY



## remap prefix to Control + a
set -g prefix C-a
unbind C-b
bind a send-prefix

# window numbering should start at 1
set -g base-index 1

# escape time should be zero
set -s escape-time 0

# resize to smallest client: only take clients that actually look at the window into account
setw -g aggressive-resize on

# force a reload of the config file
unbind r
bind r source-file ~/.tmux.conf

# quick pane cycling
unbind ^A
bind ^A select-pane -t :.+

# easy swapping windows around
bind C-Left swap-window -t -1
bind C-Right swap-window -t +1

# use zsh instead of bash
set-option -g default-shell /bin/zsh

# use 256 colors terminal
set -g default-terminal "xterm-256color"
set-option -ga terminal-overrides ",xterm-256color:Tc"

# mouse stuff
set -g mouse on
# old mouse options (tmux < 2.1)
#set -g mode-mouse on
#set -g mouse-resize-pane on
#set -g mouse-select-pane on
#set -g mouse-select-window on

# vi input mode pls
set -g mode-keys vi


## TMUX PLUGIN MANAGER
# remember:
# prefix + I for install
# prefix + U for update
# prefix + alt + u for uninstall

# List of plugins
set -g @plugin 'tmux-plugins/tpm'
set -g @plugin 'tmux-plugins/tmux-sensible'

set -g @plugin 'tmux-plugins/tmux-resurrect' # prefix Ctrl-s save, prefix Ctrl-r restore
set -g @resurrect-strategy-vim 'session'
set -g @resurrect-strategy-nvim 'session'

set -g @plugin 'tmux-plugins/tmux-continuum'
set -g @continuum-restore 'on'

set -g @plugin "https://github.com/tmux-plugins/tmux-copycat"

set -g @plugin "https://github.com/tmux-plugins/tmux-yank"
set -g @shell_mode vi

# Other examples:
# set -g @plugin 'github_username/plugin_name'
# set -g @plugin 'git@github.com/user/plugin'
# set -g @plugin 'git@bitbucket.com/user/plugin'

# Initialize TMUX plugin manager (keep this line at the very bottom of tmux.conf)
run '~/.tmux/plugins/tpm/tpm'
