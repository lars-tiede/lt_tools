# {{ ansible_managed }}
#
# DO NOT EDIT THIS FILE DIRECTLY



## remap prefix to Control + a
set -g prefix C-a
unbind C-b
bind a send-prefix

# window numbering should start at 1
set -g base-index 1

# escape time should be zero
set -s escape-time 0

# resize to smallest client: only take clients that actually look at the window into account
setw -g aggressive-resize on

# force a reload of the config file
unbind r
bind r source-file ~/.tmux.conf

# quick pane cycling
unbind ^A
bind ^A select-pane -t :.+

# easy swapping windows around
bind C-Left swap-window -t -1
bind C-Right swap-window -t +1

# use zsh instead of bash
set-option -g default-shell /bin/zsh

# use 256 colors terminal
set -g default-terminal "screen-256color"

# mouse stuff
set -g mode-mouse on
set -g mouse-resize-pane on
set -g mouse-select-pane on
set -g mouse-select-window on

# vi input mode pls
set -g mode-keys vi
